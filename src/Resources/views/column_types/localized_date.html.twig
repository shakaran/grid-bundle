{# @var column \Unlooped\GridBundle\Column\Column #}

{% extends '@UnloopedGrid/column_types/_iterable_column.html.twig' %}

{% block column_content %}
    {% if value is not null %}
        {{ value|format_datetime(column.options.date_format, column.options.time_format, locale=column.options.locale, timezone=column.options.timezone, pattern=column.options.format, calendar=column.options.calendar) }}
        {% if it_loop is defined and not it_loop.last %}
            {{ column.options.implode_separator }}
        {% endif %}
    {% else %}
        {{ column.options.nullSymbol }}
    {% endif %}
{% endblock %}
